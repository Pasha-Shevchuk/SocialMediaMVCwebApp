@using SocialMediaMVCwebApp.ViewModels
@model EditPostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<h2 class="mb-4">Edit Post</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 text-white">
    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Enter post title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="PostText" class="form-label">Post Text</label>
        <textarea asp-for="PostText" class="form-control" rows="5" placeholder="Write your post content here..."></textarea>
        <span asp-validation-for="PostText" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Image" class="form-label">Image</label>
        <input type="file" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
        <small class="form-text text-muted">Upload an image to accompany your post (optional).</small>
    </div>

    <div class="mb-3">
        <label for="PostCategoryId" class="form-label">Post Category</label>
        <select asp-for="PostCategoryId" class="form-select" asp-items="Model.PostCategories">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="PostCategoryId" class="text-danger"></span>
    </div>

    <h5 class="mt-4 mb-3">Location Details</h5>

    <div class="row g-3">
        <div class="col-md-4">
            <label for="Country" class="form-label">Country</label>
            <input type="text" asp-for="Country" class="form-control" placeholder="Country" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label for="Location" class="form-label">Location</label>
            <input type="text" asp-for="Location" class="form-control" placeholder="City or Village" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label for="Region" class="form-label">Region</label>
            <input type="text" asp-for="Region" class="form-control" placeholder="State or Oblast" />
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
