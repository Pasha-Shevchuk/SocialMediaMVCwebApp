@model SocialMediaMVCwebApp.ViewModels.PostViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4" >
    <div class="row">
        <!-- Post Image -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <img src="@Model.Image" class="card-img-top" alt="Post Image" />
            </div>
        </div>

        <!-- Post Content -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body bg-black">
                    <h1 class="card-title">@Model.Title</h1>
                    <p class="card-text">@Model.PostText</p>

                    <div class="mb-2">
                        <strong>Category:</strong>
                        <span class="badge bg-secondary bg-opacity-50">@Model.PostCategoryName</span>
                    </div>
                    <div class="mb-2">
                        <strong>Location:</strong>
                        <span>@Model.Location, @Model.Region, @Model.Country</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Post ID: @Model.Id</small>
@*                         <a href="@Url.Action("Edit", "Post", new { id = Model.Id })" class="btn btn-outline-primary btn-sm">Edit Post</a>
 *@                        <a href="" class="btn btn-outline-primary btn-sm">Edit Post</a>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Post Comments Section (Optional) -->
    <div class="row mt-4">
        <div class="col-12">
            <h3>Comments</h3>
            <!-- Assuming you might add comment functionality later -->
            <div class="card">
                <div class="card-body">
                    <p>No comments yet...</p>
                </div>
            </div>
        </div>
    </div>


</div>
