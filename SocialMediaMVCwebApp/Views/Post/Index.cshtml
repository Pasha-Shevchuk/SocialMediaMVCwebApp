@using SocialMediaMVCwebApp.ViewModels
@model IEnumerable<PostViewModel>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Album example</h1>
            <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <p>
                <a href="#" class="btn btn-primary my-2">Main call to action</a>
                <a href="#" class="btn btn-secondary my-2">Secondary action</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var post in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img class="bd-placeholder-img img-top" width="100%" height="225" src="@post.Image" alt="Alternate Text" style="object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title font-weight-bold mb-2">@post.Title</h5>
                            @* <p class="card-text text-muted">@post.PostText</p> *@

                            <!-- Category and Location Information -->
                            <div class="mt-3">
                                
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-geo-alt text-danger me-2"></i>
                                    @if (!(post.Location is null && post.Country is null && post.Region is null))
                                    {
                                    <span class="text-muted"><strong>Location:</strong>@post.Country @post.Region @post.Location</span>
                                    }

                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div class="btn-group">
@*                                     <a href="@Url.Action("Details", "Post", new { id = post.Id })" class="btn btn-sm btn-outline-primary">View</a>
 *@
                                    <a type="button" class="btn btn-sm btn-outline-primary" asp-controller="Post" asp-action="Detail" asp-route-id="@post.Id">View</a>
                                    <a href="@Url.Action("Edit", "Post", new { id = post.Id })" class="btn btn-sm btn-outline-secondary">Edit</a>                                    <button type="button" class="btn btn-sm btn-outline-danger">Delete</button>
                                </div>
                                <small class="text-muted">@post.PostCategoryName</small>
                            </div>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
</div>