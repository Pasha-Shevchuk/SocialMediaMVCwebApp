@using SocialMediaMVCwebApp.ViewModels
@model DashboardViewModel

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Your Posts</h1>
            <p class="lead text-body-secondary">In this page you can manipulate you posts as well as edit your personal account</p>
            <p>
                <a class="btn btn-primary my-2" asp-controller="Post" asp-action="Create">Create a new Post</a>
                <a class="btn btn-secondary my-2">User Details</a>
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <img class="bd-placeholder-img img-top" width="100%" height="225" src="@post.Image" alt="Alternate Text" style="object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title font-weight-bold mb-2">@post.Title</h5>

                            <!-- Category and Location Information -->
                            <div class="mt-3">

                                <div class="d-flex align-items-center">
                                    <i class="bi bi-geo-alt text-danger me-2"></i>
                                    @if (!(post.Address.Location is null && post.Address.Country is null && post.Address.Region is null))
                                    {
                                        <span class="text-muted"><strong>Location:</strong>@post.Address.Country @post.Address.Region @post.Address.Location</span>
                                    }

                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <div class="btn-group">
                                    @*<a href="@Url.Action("Details", "Post", new { id = post.Id })" class="btn btn-sm btn-primary">View</a>*@

                                    <a type="button" class="btn btn-sm btn-primary" asp-controller="Post" asp-action="Detail" asp-route-id="@post.Id">View</a>
                                    

                                </div>
                                <small class="text-muted">@post.PostCategory.NameOfPostCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
</div>